import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class ChatClient {
    public static void main(String[] args) {
        ClientSocketWrapper socketWrapper = new ClientSocketWrapper("127.0.0.1", 2345);
        BufferedReader consoleInput = new BufferedReader(new InputStreamReader(System.in));
        socketWrapper.sendMessage(args[0]);

        // Thread to handle user input
        new Thread(() -> {
            try {
                String input;
                while ((input = consoleInput.readLine()) != null) {
                    socketWrapper.sendMessage(input);
                    if ("exit".equalsIgnoreCase(input)) {
                        socketWrapper.close();
                        break;
                    }
                }
            } catch (IOException e) {
                e.printStackTrace();
            }
        }).start();

        // Thread to handle server responses
        new Thread(() -> {
            String response;
            while ((response = socketWrapper.readMessage()) != null) {
                if ("exit".equalsIgnoreCase(response)) {
                    break;
                }
                System.out.println(response);
            }
            System.out.println("Disconnected from server.");
            socketWrapper.close();
            System.exit(0);
        }).start();
    }
}
